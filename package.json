{
    "name": "laboiteabouillons-mini.css",
    "version": "1.0.0",
    "description": "mini.css flavors for La boîte à bouillons websites",
	"keywords": [
    	"La boîte à bouillons",
	    "css",
    	"sass",
	    "flavor",
    	"mini.css"
  ],
	"homepage": "https://github.com/laboiteabouillons/mini.css",    
	"author": "Olivier Jullien <https://github.com/ojullien>",
    "license": "MIT",
    "devDependencies": {
        "node-sass": "4.5.2"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "autoprefixer": "postcss dist/*.css --use autoprefixer -d dist/prefixed/",
        "scsse": "node-sass --output-style expanded -o dist src",
        "scssc": "node-sass --output-style compressed -o dist src",
        "build": "npm run scsse && npm run autoprefixer",
        "compress": "npm runs cssc && npm run autoprefixer"
    }
}
